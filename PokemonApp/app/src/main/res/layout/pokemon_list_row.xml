<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_pokemon_image"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/list_image_horizontal_padding"
        android:paddingEnd="@dimen/list_image_horizontal_padding"
        android:paddingTop="@dimen/list_image_vertical_padding"
        android:paddingBottom="@dimen/list_image_vertical_padding"
        android:contentDescription="@string/pokemon_sprite"/>

    <TextView
        android:id="@+id/tv_details_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:singleLine="true"
        android:textColor="@color/colorTextParagraph"
        android:textSize="32sp"/>

</LinearLayout>